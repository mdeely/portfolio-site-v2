include /partials/module

doctype
html
  head
    - var title = title || "Marc Deely"
    - var desc = desc || "A collection of portfolio work by Marc Deely. Website designed and coded by yours truly!"
    block title
    title #{title}
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquerymobile/1.4.5/jquery.mobile.min.js")
    script(src="https://npmcdn.com/imagesloaded@4.1/imagesloaded.pkgd.min.js")
    script(src="/scripts/script.js")
    script(src="/scripts/googleAnalytics.js")
    script(src="/scripts/jquery.lazyload.min.js")
    script(src="/scripts/masonry.pkgd.min.js")
    link(rel="icon" type="image/png" href="favicon.png")
    link(rel="apple-touch-icon" sizes="180x180" href="/apple-icon-180x180.png")
    link(rel='stylesheet' href='/stylesheets/style.css')
    link(href='https://fonts.googleapis.com/css?family=Lato:400,700,300' rel='stylesheet' type='text/css')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="description" content=desc)
    meta(property="og:image" content="http://www.marcdeely.com/fb-thumb.png")
    meta(property="og:description" content="desc")
    meta(property="og:title" content="Marc Deely")
    meta(property="og:url" content="http://www.marcdeely.com/")
  body.photography-wrapper

    block masthead

    block navigation

    block content
    +scrollToTop