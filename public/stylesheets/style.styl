@import 'nib';

// Nib provides a CSS reset
global-reset()

// Button Reset
button {
    cursor: pointer;
    border: none;
    margin: 0;
    padding: 0;
    outline: 0;
    background-color: transparent;
}

img {
    max-width: 100%;
}

// Mixins
aspectRatio($width, $height) {
  position: relative;
  &:before {
    display: block;
    content: "";
    width: 100%;
    padding-top: ($height / $width) * 100%;
  }

  > .item-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
}

navItemStyles() {
    background-color: white;
    box-shadow: $boxShadow;
    border-radius: 5px;
}

// Animations

@keyframes hover {
    0%   { transform: translate(0px,0px); }
    20%  { transform: translate(-3px,9px); }
    40%  { transform: translate(0px,-8px); }
    60%  { transform: translate(4px,7px); }
    80%  { transform: translate(-5px,-8px); }
    100% { transform: translate(0px,0px); }
}

// Variables

$blue   = #92C3FF;
$black  = #333;
$red    = #FFD0D0;

$backgroundColor     = #F9F9F9;
$backgroundDark      = #232323;
$triggerSpacing      = 42px;
$triggerSpacingSixth = ($triggerSpacing/6)
$triggerLineHeight   = 3px;
$triggerColor        = $blue;

$menuWidth = 320px;

$boxShadow = 0 1px 2px rgba(0,0,0,.15);

zIndexMax = 999;

html {
