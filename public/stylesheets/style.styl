.nav-item {
    position: fixed;
    top: 28px;
    right: 14px;
    z-index: zIndexMax;
    transition: top .5s ease-in-out, right .5s ease-in-out;
    transition-delay: .6s;
    navItemStyles();
    background-color: $backgroundColor;
    box-shadow: none;

    &.back,
    .menu-trigger {
        height: $triggerSpacing;
        width: $triggerSpacing;
        padding: 20px 10px;
    }

    &.back {
        left: 14px;
        width: $triggerSpacing;
        height: $triggerSpacing;
        z-index: zIndexMax - 2;

        span {
            background-color: transparent;
            width: 16px;

            &:before{
                left: 1px;
                top: 4px;
                transform: rotate(35deg);
            }

            &:after {
                left: 1px;
                top: -4px;
                transform: rotate(-35deg);
            }
        }
    }


    .menu-trigger {
        z-index: zIndexMax + 1;
        position: relative;
        transition: box-shadow .15s ease-in-out;
        navItemStyles();
        background-color: transparent;
        box-shadow: none;
    }

    span {
        background-color: $triggerColor;
        width: 100%;
        height: $triggerLineHeight;
        display: block;
        position: relative;
        border-radius: $triggerLineHeight*2;
        z-index: inherit;
        transition: all .25s ease-in-out;
        pointer-events: none;

        &:after,
        &:before {
            content: "";
            position: absolute;
            top: -10px;
            left: 0;
            width: inherit;
            height: $triggerLineHeight;
            background-color: inherit;
            border-radius: 5px;
            background-color: $triggerColor;
            transition: all .25s ease-in-out;
        }

        &:before, {
            top: 10px;
        }
    }

    &:active {
        transform: translate(0,1px);
    }
}

.fullscreen-image {
    display: none;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-attachment: scroll;
    background-size: cover;
    z-index: zIndexMax + 2;
    overflow: scroll;
    text-align: center;
    background-color: #131313;
    padding: 20px;
    cursor: -webkit-zoom-out;
    color: #888;

    img {
        pointer-events: none;
        box-shadow: 0 2px 4px rgba(black, .5);
        border-radius: 3px;
        background-color: $backgroundColor;
    }

    p {
        font-weight: 200;
        margin: 32px auto;
        max-width: 550px;
    }
}

.menu {
    .menu-trigger.triggered {
        box-shadow: none;

        span {
            background-color: transparent;

            &:before,
            &:after {
                transition: all .25s ease-in-out;
                top: 0px;
            }

            &:before {
                transform: rotate(-45deg);
            }

            &:after{
                transform: rotate(45deg);
            }
        }
    }
}

ul.menu-container {
    position: absolute;
    width: $menuWidth;
    height: auto;
    top: 0;
    right: 0;
    border-radius: 4px;
    background-color: darken($blue, 30%);
    background-color: white;
    box-shadow: inherit;
    opacity: 0;
    text-align: left;
    font-size: 16px;
    color: #333;
    overflow: hidden;
    transition: all .2s ease-in-out;
    transform-origin: 100% 0;
    transform: scale(0, 0);

    &.open {
        box-shadow: $boxShadow;
        opacity: 1;
        padding: 20px 20px 0 20px;
        transition: all .25s ease-in-out;
        transform: initial;

        li {
            opacity: 1;
            transition: all .25s ease-in-out;
            transition-delay: .15s;
            transform: initial;

            &:nth-child(2) { transition-delay: .25s; };
            &:nth-child(3) { transition-delay: .35s; };
            &:nth-child(4) { transition-delay: .45s; };

            a {
                cursor: pointer;
            }
        }
    }

    li {
        opacity: 0;
        transform: translate(10px, 0);
        transition: all .25s ease-in-out;
        // transition-delay: .2s;

        a {
            color: inherit;
            text-decoration: none;
            display: block;
            padding: 20px;

            &.current {
                color: #DDD;
                pointer-events: none;

                &:hover {
                    color: #DDD;
                }
            }

            &:hover {
                color: $triggerColor;
            }
        }

        &.social {
            border-top: 1px dashed #bbb;
            margin-top: 20px;
            text-align: right;
            transform: translate(0, 0);
            transition-duration: 0;
            opacity: 1;

            a {
                display: inline-block;
                margin-right: 12px;
                opacity: .5;
                transition-duration: .2s;

                img {
                    height: 16px;
                    width: auto;
                }

                &.email img {
                    height: 13px;
                }

                &:last-child {
                    margin-right: 0;
                }

                &:hover {
                    opacity: 1;
                    transition-duration: .2s;
                }
            }
        }
    }
}

nav.masthead {
    padding: 24px;
    color: transparent;
    background-color: $backgroundColor;
    position: relative;
    z-index: 10;

    ul {
        margin: 15px auto 0 auto;
        text-align: center;

        li {
            display: inline-block;
            padding: 6px;
            margin: 6px 12px;
            font-size: 1em;
            vertical-align: middle;
            background-color: white;
            height: 54px;
            width: 54px;
            border-radius: 5em;
            -webkit-animation: hover 9s infinite;
            animation: hover 40s ease-in-out infinite;
            box-shadow: -3px 3px 10px rgba(0,0,0,0.1), -10px 5px 29px rgba(0,0,0,0.1);
            transition: box-shadow .2s ease-in-out;

            &:nth-child(2n) { animation: hover 30s ease-in-out infinite reverse; }
            &:nth-child(3n) { animation: hover 20s ease-in-out infinite alternate; }

            &.name {
                background-image: url("../images/icons/name.svg");
                font-size: 2em;
                margin: 6px 4%;
                width: 100px;
                height: 100px;

                a {
                    color: transparent;
                }
            }

            &.name,
            &.code,
            &.design {
                background-position: center;
                background-size: 58%;
                background-repeat: no-repeat;
                position: relative;

                &:after {
                    content: attr(data-type);
                    padding: 4px;
                    color: #666;
                    border-radius: 4px;
                    position: absolute;
                    left: 0;
                    right: 0;
                    bottom: -22px;
                    letter-spacing: 2px;
                    text-transform: uppercase;
                    font-size: 10px;
                    opacity: 0;
                }

                &:hover:after {
                    opacity: 1;
                    bottom: -26px;
                    transition: all .2s ease-out;
                }
            }

            &.design {
                background-image: url("../images/icons/design-filter.png");
            }

            &.code {
                background-image: url("../images/icons/code-filter.png");
                background-size: 52%;
            }

            &.activated {
                transition: box-shadow .1s ease-in-out;
                box-shadow: 0 0 0 2px $blue, 1px 1px 2px rgba(0,0,0,0.2), -2px 2px 9px rgba(0,0,0,0.2);
            }

            a {
                width: 100%;
                height: 100%;
                position: absolute;
                left: 0;
                top: 0;
                cursor: pointer;
            }
        }
    }
}

.menu-fader {
    visibility: hidden;
    position: fixed;
    background-color: $blue;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    opacity: 0;
    transition: opacity .4s, z-index 0s linear .4s, visibility 0s linear .4s;
    z-index: -(zIndexMax);

    &.active {
        visibility: visible;
        opacity: .75;
        transition: opacity .4s ease-in-out .01s, visibility 0s;
        z-index: zIndexMax - 1;
    }
}

.noClick {
