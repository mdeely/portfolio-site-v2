.nav-item {
    position: fixed;
    top: 14px;
    right: 14px;
    z-index: zIndexMax;
    transition: top .5s ease-in-out, right .5s ease-in-out;
    transition-delay: .6s;
    navItemStyles();
    background-color: $backgroundColor;
    box-shadow: none;

    &.back,
    .menu-trigger {
        height: $triggerSpacing;
        width: $triggerSpacing;
        padding: 20px 10px;
    }

    &.back {
        left: 14px;
        width: $triggerSpacing;
        height: $triggerSpacing;
        z-index: zIndexMax - 2;

        span {
            background-color: transparent;
            width: 16px;

            &:before{
                left: 1px;
                top: 4px;
                transform: rotate(35deg);
            }

            &:after {
                left: 1px;
                top: -4px;
                transform: rotate(-35deg);
            }
        }
    }


    .menu-trigger {
        z-index: zIndexMax + 1;
        position: relative;
        transition: box-shadow .15s ease-in-out;
        navItemStyles();
        background-color: transparent;
        box-shadow: none;
    }

    span {
        background-color: $triggerColor;
        width: 100%;
        height: $triggerLineHeight;
        display: block;
        position: relative;
        border-radius: $triggerLineHeight*2;
        z-index: inherit;
        transition: all .25s ease-in-out;
        pointer-events: none;

        &:after,
        &:before {
            content: "";
            position: absolute;
            top: -10px;
            left: 0;
            width: inherit;
            height: $triggerLineHeight;
            background-color: inherit;
            border-radius: 5px;
            background-color: $triggerColor;
            transition: all .25s ease-in-out;
        }

        &:before, {
            top: 10px;
        }
    }

    &:active {
        transform: translate(0,1px);
    }
}

.fullscreen-image {
    display: none;
