.menu {
    .menu-trigger.triggered {
        box-shadow: none;

        span {
            background-color: transparent;

            &:before,
            &:after {
                transition: all .25s ease-in-out;
                top: 0px;
            }

            &:before {
                transform: rotate(-45deg);
            }

            &:after{
                transform: rotate(45deg);
            }
        }
    }
}

ul.menu-container {
    position: absolute;
    width: $menuWidth;
    height: auto;
    top: 0;
    right: 0;
    border-radius: 4px;
    background-color: darken($blue, 30%);
    background-color: white;
    box-shadow: inherit;
    opacity: 0;
    text-align: left;
    font-size: 16px;
    color: #333;
    overflow: hidden;
    transition: all .2s ease-in-out;
    transform-origin: 100% 0;
    transform: scale(0, 0);

    &.open {
        box-shadow: $boxShadow;
        opacity: 1;
        padding: 20px 20px 0 20px;
        transition: all .25s ease-in-out;
        transform: initial;

        li {
            opacity: 1;
            transition: all .25s ease-in-out;
            transition-delay: .15s;
            transform: initial;

            &:nth-child(2) { transition-delay: .25s; };
            &:nth-child(3) { transition-delay: .35s; };
            &:nth-child(4) { transition-delay: .45s; };

            a {
                cursor: pointer;
            }
        }
    }

    li {
        opacity: 0;
        transform: translate(10px, 0);
        transition: all .25s ease-in-out;
        // transition-delay: .2s;

        a {
            color: inherit;
            text-decoration: none;
            display: block;
            padding: 20px;

            &.current {
                color: #DDD;
                pointer-events: none;

                &:hover {
                    color: #DDD;
                }
            }

            &:hover {
                color: $triggerColor;
            }
        }

        &.social {
            border-top: 1px dashed #bbb;
            margin-top: 20px;
            text-align: right;
            transform: translate(0, 0);
            transition-duration: 0;
            opacity: 1;

            a {
                display: inline-block;
                margin-right: 12px;
                opacity: .5;
                transition-duration: .2s;

                img {
                    height: 16px;
                    width: auto;
                }

                &.email img {
                    height: 13px;
                }

                &:last-child {
                    margin-right: 0;
                }

                &:hover {
                    opacity: 1;
                    transition-duration: .2s;
                }
            }
        }
    }
}

