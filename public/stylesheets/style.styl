    .side_menu {
        z-index: 10;
        width: 112px;
        left: -62px;
        position: fixed;
        top: 0;
        bottom: 0;
        background-color: rgba(0,0,0,.1);
        transition: all .2s ease-in-out;
        color: white;
        overflow-y: hidden;
        cursor: pointer;

        &::-webkit-scrollbar {
            width: 4px;
            padding: 10px;
        }

        &::-webkit-scrollbar-track {
            background-color: transparent;
            border-radius: 10px;
        }

        &::-webkit-scrollbar-thumb {
            border-radius: 10px;
            background-color: alpha(white, .5);
        }

        .photo-drawer {
            opacity: 0;
            transition all .2 ease-in-out;

            a {
                pointer-events: none;
            }
        }

        sideMenuOpen() {
            left: 0;
            background-color: rgba(0,0,0,.35);
            transition: all .2s ease-in-out;
            cursor: intial;
            -ms-overflow-style: -ms-autohiding-scrollbar;
            overflow-y: scroll;
            -webkit-overflow-scrolling: touch;

            .menu-toggle {
                opacity: 0;
                transition all .2s ease-in-out;
            }

            .photo-drawer {
                opacity: 1;
                transition all .2s ease-in-out;

                a {
                    display: block;
                    margin: 4px 8px;

                    &:first-child {
                        margin-top: 8px;
                    }

                    &:last-child {
                        margin-bottom: 64px;
                    }

                    img {
                        border-radius: 3px;
                        box-shadow: 0 2px 2px black;
                        transition: all .1s ease-in-out;

                        &:hover {
                            box-shadow: 0 0px 1px 1px $blue;
                            transition: all .1s ease-in-out;
                        }

                        &.active {
                            box-shadow: 0 0px 1px 1px #2d8bff;
                        }
                    }
                }

                a {
                    pointer-events: all;
                }
            }
        }

        &:hover {
            background-color: rgba(0,0,0,.25);
        }

        &.open {
            sideMenuOpen();
        }

        .menu-toggle {
            left: 12px;
            top: 26px;
            opacity: 1;
            position: fixed;
            transition all .2s ease-in-out .2s;
        }
    }

