@import 'nib';

// Nib provides a CSS reset
global-reset()

// Button Reset
button {
    cursor: pointer;
    border: none;
    margin: 0;
    padding: 0;
    outline: 0;
    background-color: transparent;
}

img {
    max-width: 100%;
}

// Mixins
aspectRatio($width, $height) {
  position: relative;
  &:before {
    display: block;
    content: "";
    width: 100%;
    padding-top: ($height / $width) * 100%;
  }

  > .item-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
}

navItemStyles() {
    background-color: white;
    box-shadow: $boxShadow;
    border-radius: 5px;
}

// Animations

@keyframes hover {
    0%   { transform: translate(0px,0px); }
    20%  { transform: translate(-1px,6px); }
    40%  { transform: translate(1px,-5px); }
    60%  { transform: translate(1px,4px); }
    80%  { transform: translate(-2px,-5px); }
    100% { transform: translate(0px,0px); }
}

@keyframes appear {
    0%   { opacity: 1; display: block; }
    100% { opacity: 0; display: none;  }
}

