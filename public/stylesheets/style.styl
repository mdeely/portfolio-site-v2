                font-size: 2em;
                margin: 6px 4%;
                width: 100px;
                height: 100px;

                a {
                    color: transparent;
                }
            }

            &:after {
                top: 48px;
            }

            &:hover:after {
                top: 56px;
            }

            &.name,
            &.ui,
            &.photos,
            &.design,
            &.code {
                background-position: center;
                background-size: 58%;
                background-repeat: no-repeat;
                position: relative;

                &:after {
                    content: attr(data-type);
                    padding: 4px;
                    color: #666;
                    border-radius: 4px;
                    position: absolute;
                    left: -50%;
                    right: -50%;
                    letter-spacing: 2px;
                    text-transform: uppercase;
                    font-size: 10px;
                    opacity: 0;
                }

                &:hover:after {
                    opacity: 1;
                    transition: all .2s ease-out;
                }

                &.name {

                    &:after {
                        top: 102px;
                    }

                    &:hover:after {
                        opacity: 1;
                        top: 108px;
                        transition: all .2s ease-out;
                    }
                }
            }

            &.design {
                background-image: url("/images/icons/design-filter.png");
            }

            &.photos {
                background-image: url("/images/icons/photos.png");
                background-size: 52%;
            }

            &.ui {
                background-image: url("/images/icons/ui-filter.png");
                background-size: 46%;
            }

            &.code {
                background-image: url("/images/icons/code-filter.png");
                background-size: 52%;
            }

            &.activated {
                transition: box-shadow .1s ease-in-out;
                box-shadow: 0 0 0 2px $blue, 1px 1px 2px rgba(0,0,0,0.2), -2px 2px 9px rgba(0,0,0,0.2);
            }

            a {
                width: 100%;
                height: 100%;
                position: absolute;
                left: 0;
                top: 0;
                cursor: pointer;
            }
        }
    }
}

.menu-fader {
    visibility: hidden;
    position: fixed;
    background-color: $blue;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    opacity: 0;
    transition: opacity .4s, z-index 0s linear .4s, visibility 0s linear .4s;
    z-index: -($zIndexMax);

    &.active {
        visibility: visible;
        opacity: .75;
        transition: opacity .4s ease-in-out .01s, visibility 0s;
        z-index: $zIndexMax - 1;
    }
}

